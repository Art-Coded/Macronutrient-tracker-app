<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Define the solid color for the background (optional) -->
    <solid android:color="@android:color/transparent" />

    <!-- Define the stroke (border) -->
    <stroke
        android:width="1dp"
        android:color="#80FFFFFF" /> <!-- Color of the border (black) -->

    <!-- Optional: Define corner radius (rounded corners) -->
    <corners android:radius="8dp" /> <!-- Rounded corners (optional) -->
</shape>
