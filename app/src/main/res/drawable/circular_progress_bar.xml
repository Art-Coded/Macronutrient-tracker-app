<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background Circle: Cyan (always visible) -->
    <item android:id="@android:id/background">
        <shape>
            <stroke
                android:width="6dp"
                android:color="@color/dark_green" />
            <!-- Increased the radius for the background circle -->
            <corners android:radius="80dp" />
        </shape>
    </item>

    <!-- Progress Circle: Green (fills as progress increases) -->
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <stroke
                    android:width="6dp"
                    android:color="@color/purple" />
                <!-- Increased the radius for the progress circle -->
                <corners android:radius="70dp" />
            </shape>
        </clip>
    </item>
</layer-list>
