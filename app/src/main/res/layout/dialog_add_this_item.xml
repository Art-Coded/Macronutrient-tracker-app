<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/grey"
    android:padding="24dp"
    android:gravity="center">

    <!-- Title -->
    <TextView
        android:id="@+id/dialogTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/gurmukhibold"
        android:text="Add Food Item"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:layout_marginBottom="16dp" />

    <!-- Message -->
    <TextView
        android:id="@+id/dialogMessage1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/gurmukhiregular"
        android:text="Are you sure you want to add "
        android:textSize="14sp"
        android:textColor="@color/white" />

    <!-- Food Name (Bold Part) -->
    <TextView
        android:id="@+id/dialogFoodName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/gurmukhibold"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:layout_marginTop="4dp" />

    <TextView
        android:id="@+id/dialogMessage2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/gurmukhiregular"
        android:text=" to your Meal?"
        android:textSize="14sp"
        android:textColor="@color/white" />

    <!-- Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="24dp"
        android:gravity="center">

        <Button
            android:id="@+id/dialogCancelButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/gurmukhibold"
            android:text="Cancel"
            android:layout_weight="1"
            android:textSize="14sp"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/dialogConfirmButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Yes"
            android:fontFamily="@font/gurmukhibold"
            android:backgroundTint="@color/white"
            android:textColor="@color/black"
            android:layout_weight="1"
            android:textSize="14sp"
            android:layout_marginStart="16dp" />
    </LinearLayout>
</LinearLayout>
